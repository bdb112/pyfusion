#!/bin/bash
#return the shot numbers of all the W7X data in the pwd (or the first arg) and below it
helpstr="Usage: get_W7X_shotnums <dir> <diag>\n  e.g. get_W7X_shotnums . W7X_MIR "
if [ $# -lt 1 ]; then
    echo $helpstr;
    exit 96;
fi
DIAG=${2:-"W7X"}
# echo 'look in ' $1 for $DIAG
pushd ${1} >> /dev/null
ls -RL |awk -F_ ' /'$DIAG'/ {printf "%d,%d\n", $1,$2}'|sort -n|uniq
popd >> /dev/null
