cd ~/python/pyfusion
# accepts python path and pyfusion path (defaults to $PYTHONPATH pyfusion
# MUST be sourced in bash shell.
# . setup_pyfusion
# . setup_pyfusion my_python_path
# . setup_pyfusion my_python_path my_absolute_pyfusion path
# Change this (localpyp) to local default - and the history to your tate. 
# The rest should be OK
localpyp=c:/cygwin/home/bdb112/python
pyp=${1:-${PYTHONPATH:-$localpyp}}
export PYTHONPATH=$pyp
pyf=${2:-$pyp/pyfusion}
export PYFUSIONPATH=$pyf
set_window_title PYFUSION
echo adding useful lines to history list, starting with least common
history -s export PYFUSION_SEGMENT_OVERLAP=1
history -s export PYFUSION_N_SAMPLES_TIME_SEGMENT=256
history -s export PYFUSION_DEVICE=HeliotronJ
history -s export PYFUSION_SHOT_T_MIN="165."
history -s export PYFUSION_SHOT_T_MAX="295."
history -s export PYFUSION_SQL_SERVER=mysql://localhost/pyfusion081225
history -s export PYFUSION_SQL_SERVER=mysql://localhost/hj_sml_090111
history -s export PYFUSION_SQL_SERVER=mysql://localhost/pyfh1090111
history -s export PYFUSION_SQL_SERVER='sqlite:///sqlite.txt'
history -s export PYFUSION_SQL_SERVER='sqlite://'
history -s export PYFUSION_VERBOSE=1
echo Here are some relevant env vars
env |grep PY

